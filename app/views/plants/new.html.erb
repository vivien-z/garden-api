<div class="container form py-5 mt-3">
  <div class="row justify-content-center">
    <div class="col-8">
      <h4 class="mb-3">Add a plant</h4>
      <%= simple_form_for(@plant) do |f| %>
        <%= f.input :name %>
        <%= f.input :light, :collection => ["low", "medium", "high"] %>
        <%= f.input :size, :placeholder => "in cm" %>
        <%= f.input :photo %>
        <%= f.button :submit, class: "btn btn-warning mt-3 w-100" %>
      <% end %>

    </div>
  </div>
</div>
